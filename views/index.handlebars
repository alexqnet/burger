<h1>Eat-Da-Burger</h1>

<div class="container">
   <div class="center">

<h2>Order a burger</h2>
<img src="../../assets/img/burger.png">
<form class="create-update-form" action="/" method="POST">

<div class="form-group">
	<input type="text" id="bu" class="textField" name="name">
</div>
<button class="button" type="submit">Make it</button>
</form>


   </div>

   <div class="left">

<h2>Burgers ready to eat</h2>
<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST">
				<input type="hidden" name="devoured" value="true">
				<button type="submit">Devour it!</button>
				</form>
			</li>
		{{/unless}}
	{{/each}}
</ul>

   </div>


   <div class="right">

<h2>Devoured burgers</h2>
<ul>
{{#each burgers}}
{{#if this.devoured}}
<li>{{this.burger_name}}

</li>
{{/if}}
{{/each}}
</ul>

   </div>
</div>